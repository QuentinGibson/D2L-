<!DOCTYPE html>
<html>
  <head>
    <title>College Planner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/2c229f54df.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <%= render "layouts/sidebar" %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
        <% if notice %>
  <p class="alert alert-success mb-0"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert mb-0 alert-danger"><%= alert %></p>
<% end %>
          <%= render "layouts/topnav" %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
